@model IEnumerable<LibraryAttendance.Models.Attendance>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Admin Panel";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center mb-2">Data Absensi Mahasiswa</h2>
            @if (!string.IsNullOrEmpty(ViewBag.StudentName))
            {
                <p class="text-center text-muted">Nama: <strong>@ViewBag.StudentName</strong></p>
            }
            <form method="get" class="mb-4">
                <div class="input-group">
                    <input type="text"
                           name="searchNim"
                           class="form-control"
                           placeholder="Cari NIM Mahasiswa"
                           value="@ViewBag.SearchNim">
                    <button type="submit" class="btn btn-primary">Cari</button>
                </div>
            </form>

            <div class="table-responsive">
                <table id="adminTable" class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">NIM</th>
                            <th scope="col">Mode</th>
                            <th scope="col">Timestamp</th>
                            <th scope="col" class="text-center">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">Tidak ada data absensi.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.Id</th>
                                    <td>@item.NIM</td>
                                    <td>
                                        <span class="badge @GetBadgeClass(item.Mode)">
                                            @item.Mode
                                        </span>
                                    </td>
                                    <td>@item.Timestamp.ToString("dd MMM yyyy HH:mm:ss")</td>
                                    <td class="text-center">
                                        <form asp-action="Delete" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Apakah Anda yakin ingin menghapus data ini?');">
                                                <i class="bi bi-trash"></i> Hapus
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        // Inisialisasi DataTables
        $('#adminTable').DataTable({
            "order": [[0, "asc"]], // Mengatur kolom pertama (#) untuk diurutkan secara default
            "language": {
                "search": "Cari:",
                "lengthMenu": "Tampilkan _MENU_ entri",
                "info": "Menampilkan _START_ hingga _END_ dari _TOTAL_ entri",
                "paginate": {
                    "first": "Pertama",
                    "last": "Terakhir",
                    "next": "Berikutnya",
                    "previous": "Sebelumnya"
                },
                "zeroRecords": "Tidak ada data ditemukan",
                "infoEmpty": "Tidak ada entri tersedia",
                "infoFiltered": "(difilter dari total _MAX_ entri)"
            }
        });
    });
</script>

@functions {
    public string GetBadgeClass(string mode)
    {
        if (mode == "Datang") return "bg-success";
        if (mode == "Pergi") return "bg-warning text-dark";
        return "bg-secondary";
    }
}
