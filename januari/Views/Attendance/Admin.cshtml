@model IEnumerable<LibraryAttendance.Models.ViewModels.AttendanceViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Admin Panel";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center mb-3">Student Staff Attendance</h2>

            <!-- Notifikasi -->
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Message"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Tombol Menuju Laporan -->
            <div class="mb-3 d-flex justify-content-between">
                <a asp-controller="Attendance" asp-action="Laporan" class="btn btn-success">
                    <i class="bi bi-bar-chart-line"></i> Lihat Laporan
                </a>
            </div>

            <!-- Form Pencarian -->
            <form method="get" class="mb-4">
                <div class="row">
                    <div class="col-md-3">
                        <input type="text" name="searchNim" class="form-control" placeholder="Cari NIM" value="@ViewBag.SearchNim">
                    </div>
                    <div class="col-md-3">
                        <input type="text" name="searchName" class="form-control" placeholder="Cari Nama Mahasiswa" value="@ViewBag.SearchName">
                    </div>
                    <div class="col-md-2">
                        <input type="date" name="startDate" class="form-control" value="@ViewBag.StartDate">
                    </div>
                    <div class="col-md-2">
                        <input type="date" name="endDate" class="form-control" value="@ViewBag.EndDate">
                    </div>
                    <div class="col-md-2 d-flex">
                        <button type="submit" class="btn btn-primary me-2 w-100">Filter</button>
                        <a href="@Url.Action("Admin", "Attendance")" class="btn btn-secondary w-100">Reset</a>
                    </div>
                </div>
            </form>

            <!-- Tabel Absensi -->
            <div class="table-responsive">
                <table id="adminTable" class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>NIM</th>
                            <th>Nama Mahasiswa</th>
                            <th>Mode</th>
                            <th>Timestamp</th>
                            <th class="text-center">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">Tidak ada data absensi.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.NIM</td>
                                    <td>@item.StudentName</td>
                                    <td>
                                        <span class="badge @GetBadgeClass(item.Mode)">
                                            @item.Mode
                                        </span>
                                    </td>
                                    <td>@item.Timestamp.ToString("dd MMM yyyy HH:mm:ss")</td>
                                    <td class="text-center">
                                        <form asp-action="Delete" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm delete-button">
                                                <i class="bi bi-trash"></i> Hapus
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetBadgeClass(string mode)
    {
        if (mode == "Masuk") return "bg-success";
        if (mode == "Keluar") return "bg-warning text-dark";
        return "bg-secondary";
    }
}
